{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "ESNext"],
    "module": "ES6",
    "rootDir": "./src/scripts/",
    "moduleResolution": "Node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true
  },
  "include": ["./src/scripts/"]
}
